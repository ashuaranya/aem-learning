<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" 
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"    
    extraClientlibs="[core.wcm.components.commons.editor.dialog.childreneditor.v1,core.wcm.components.carousel.v1.editor,wknd.customcarousel.author]"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_carousel_v1"
    trackingFeature="core-components:carousel:v1">
    <content
        jcr:primaryType="nt:unstructured"
        granite:class="cmp-customcarousel__editor">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured"
                    sling:hideChildren="containerItems">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        jcr:title="Properties">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured"
                                            sling:hideChildren="[autoplay,autoplayGroup]">
                                            <cq:htmlTag
                                                jcr:primaryType="nt:unstructured"
                                                cq:tagName="div"
                                                cq:cssClassNames="custom-component-class" />
                                            <!-- Carousel Type Dropdown -->
                                            <carouselType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Carousel Type"
                                                sling:orderBefore="activeItem"
                                                fieldDescription="Select the type of carousel to display."
                                                name="./carouselType"
                                                cssClassNames="custom-class carousel-type-class">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <imageGallery
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Image Gallery Carousel"
                                                        value="ImageGallery" />
                                                    <responsive
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Responsive Carousel"
                                                        value="Responsive" />
                                                    <feature
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Feature Carousel"
                                                        value="Feature" />
                                                </items>
                                            </carouselType>
                                            <activeItem
                                                jcr:primaryType="nt:unstructured"
                                                granite:class="carousel-active-item"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/hidden"
                                                name="./activeItem">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cmp-carousel-v1-dialog-edit-hook="activeItem" />
                                            </activeItem>
                                            <activeSlide
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Active Item"
                                                fieldDescription="Choose the default active item for the carousel."
                                                name="./activeSlide"
                                                cssClassNames="custom-class carousel-type-class">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <slide1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Slide 1"
                                                        value="0" />
                                                    <slide2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Slide 2"
                                                        value="1" />
                                                    <slide3
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Slide 3"
                                                        value="2" />
                                                    <slide4
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Slide 4"
                                                        value="3" />
                                                    <slide5
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Slide 5"
                                                        value="4" />
                                                </items>
                                            </activeSlide>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                    <!-- Items Tab -->
                    <items
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        sling:orderBefore="accessibility"
                        jcr:title="Items">
                        <items jcr:primaryType="nt:unstructured">
                            <!-- Section for Carousel Items -->
                            <carouselItemsSection
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                fieldLabel="Additional Text Fields"
                                fieldDescription="Provide additional text information for the carousel.">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    id="carousel-image" />
                                <items jcr:primaryType="nt:unstructured">
                                    <imageItemMultifield
                                        data-custom-id="carousel-multifield"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldLabel="Carousel Items"
                                        fieldDescription="Add multiple items to the carousel.">
                                        <field jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./imageItems">
                                            <items jcr:primaryType="nt:unstructured">
                                                <!-- Component Path -->
                                                <imagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                    fieldLabel="Upload Image"
                                                    name="./imagePath"
                                                    fileNameParameter="./fileName"
                                                    fileReferenceParameter="./imagePath"
                                                    mimeTypes="[image/png,image/jpeg,image/gif]"
                                                    allowUpload="{Boolean}false"
                                                    autoStart="{Boolean}true"
                                                    uploadUrl="${suffix.path}.createasset.html"
                                                    useHTML5="{Boolean}true"
                                                    sizeLimit="{Long}10485760"
                                                    multiple="{Boolean}false"
                                                    ddAccept="[image/png,image/jpeg,image/gif]">
                                                </imagePath>
                                                <!-- Item Title -->
                                                <itemAltText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Alt Text"
                                                    fieldDescription="Enter the title for this carousel item."
                                                    name="./altText" />
                                            </items>
                                        </field>
                                    </imageItemMultifield>
                                </items>
                            </carouselItemsSection>

                            <!-- Second Section for Text Fields -->
                            <textFieldsSection
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                fieldLabel="Additional Text Fields"
                                fieldDescription="Provide additional text information for the carousel.">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    id="carousel-responsive" />
                                <carouselItemsLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/field"
                                        fieldLabel="Carousel Items" />
                                <items jcr:primaryType="nt:unstructured">
                                    <containerItems
                                        jcr:primaryType="nt:unstructured"
                                         fieldLabel="Carousel Items"
                                        sling:resourceType="core/wcm/components/commons/editor/dialog/childreneditor/v1/childreneditor" />
                                </items>
                            </textFieldsSection>

                            <featureFieldsSection
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                fieldLabel="Additional Text Fields"
                                fieldDescription="Provide additional text information for the carousel.">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    id="carousel-feature" />
                                <items jcr:primaryType="nt:unstructured">
                                    <featureItemMultifield
                                        data-custom-id="carousel-multifield"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldLabel="Carousel Items"
                                        fieldDescription="Add multiple items to the carousel.">
                                        <field jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./featureItems">
                                            <items jcr:primaryType="nt:unstructured">

                                                <!-- Component Path -->
                                                <imagePath
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                    fieldLabel="Upload Image"
                                                    name="./imagePath"
                                                    fileNameParameter="./fileName"
                                                    fileReferenceParameter="./imagePath"
                                                    mimeTypes="[image/png,image/jpeg,image/gif]"
                                                    allowUpload="{Boolean}false"
                                                    autoStart="{Boolean}true"
                                                    uploadUrl="${suffix.path}.createasset.html"
                                                    useHTML5="{Boolean}true"
                                                    sizeLimit="{Long}10485760"
                                                    multiple="{Boolean}false"
                                                    ddAccept="[image/png,image/jpeg,image/gif]">
                                                </imagePath>
                                                <!-- Item Title -->
                                                <itemAltText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Alt Text"
                                                    fieldDescription="Enter the title for this carousel item."
                                                    name="./altText" />

                                                <itemTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Item Title"
                                                    fieldDescription="Enter the title for this carousel item."
                                                    name="./title" />

                                                <!-- Item Description -->
                                                <longDescriptionText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                    fieldDescription="Sets the description that appears on the profiled person's page."
                                                    fieldLabel="Long Description*"
                                                    required="true"
                                                    useFixedInlineToolbar="{Boolean}true"
                                                    name="./description">
                                                    <rtePlugins jcr:primaryType="nt:unstructured">
                                                        <format
                                                            jcr:primaryType="nt:unstructured"
                                                            features="[bold,italic,underline]" />
                                                        <justify
                                                            jcr:primaryType="nt:unstructured"
                                                            features="[justifyleft,justifycenter,justifyright]" />
                                                        <lists
                                                            jcr:primaryType="nt:unstructured"
                                                            features="[ordered,unordered]" />
                                                    </rtePlugins>
                                                </longDescriptionText>
                                            </items>
                                        </field>
                                    </featureItemMultifield>
                                </items>
                            </featureFieldsSection>
                        </items>
                    </items>
                    <stylesTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Styles"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <carouselStyles
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Number of Slides"
                                        fieldDescription="Select the number of slides to display."
                                        name="./numberOfSlides">
                                        <items jcr:primaryType="nt:unstructured">
                                            <oneSlide
                                                jcr:primaryType="nt:unstructured"
                                                text="1 Slide"
                                                value="1" />
                                            <twoSlides
                                                jcr:primaryType="nt:unstructured"
                                                text="2 Slides"
                                                value="2" />
                                            <threeSlides
                                                jcr:primaryType="nt:unstructured"
                                                text="3 Slides"
                                                value="3" />
                                            <fourSlides
                                                jcr:primaryType="nt:unstructured"
                                                text="4 Slides"
                                                value="4" />
                                        </items>
                                    </carouselStyles>
                                    <enablePeekaboo
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        checked="{Boolean}false"
                                        name="./enablePeekaboo"
                                        text="Enable Peekaboo"
                                        uncheckedValue="{Boolean}false"
                                        value="{Boolean}true" />
                                    <hideShowPagination
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        checked="{Boolean}true"
                                        name="./hideShowPagination"
                                        text="Hide Show Pagination"
                                        uncheckedValue="{Boolean}false"
                                        value="{Boolean}true" />
                                    <hideShowButtons
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        checked="{Boolean}true"
                                        name="./hideShowButtons"
                                        text="Hide Show Buttons"
                                        uncheckedValue="{Boolean}false"
                                        value="{Boolean}true" />
                                </items>
                            </column>
                        </items>
                    </stylesTab>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>